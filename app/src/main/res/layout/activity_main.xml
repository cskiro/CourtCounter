<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.skiroc.courtcounter.MainActivity">

    <TextView
        android:id="@+id/team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Team A"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/team_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_name"
        android:layout_gravity="center_vertical"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/three_point_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_score"
        android:onClick="addThreePoints"
        android:text="+3 Points"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/two_point_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/three_point_button"
        android:onClick="addTwoPoints"
        android:text="+2 Points"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/free_throw_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/two_point_button"
        android:onClick="addFreeThrow"
        android:text="Free throw"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/free_throw_button"
        android:onClick="clearScore"
        android:text="Clear"
        android:textAlignment="center"
        android:textAllCaps="true" />
</LinearLayout>
